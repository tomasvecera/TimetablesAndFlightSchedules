@model IList<OrderItem>

@{
    ViewData["Title"] = "Order Item Administration";
}
<div class="bg-light rounded p-5">
    <h1>@ViewData["Title"]</h1>

    <a type="button" class="btn btn-outline-primary btn-sm" asp-action="Create">Create Order Item</a>

    @{
        if (Model != null && Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">@nameof(OrderItem.Id)</th>
                        <th scope="col">@nameof(OrderItem.RouteInstanceID)</th>
                        <th scope="col">@nameof(OrderItem.RouteInstance.RouteInstanceName)</th>
                        <th scope="col">@nameof(OrderItem.OrderID)</th>
                        <th scope="col">@nameof(OrderItem.Order.OrderNumber)</th>
                        <th scope="col">@nameof(OrderItem.Order.User.UserName)</th>
                        <th scope="col">@nameof(OrderItem.Amount)</th>
                        <th scope="col">@nameof(OrderItem.Price)</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; ++i)
                    {
                        <tr>
                            <th scope="row">@Model[i].Id</th>
                            <td>@Model[i].RouteInstance.Id</td>
                            <td>@Model[i].RouteInstance.RouteInstanceName</td>
                            <td>@Model[i].Order.Id</td>
                            <td>@Model[i].Order.OrderNumber</td>
                            <td>@Model[i].Order.User.UserName</td>
                            <td>@Model[i].Amount</td>
                            <td>@Model[i].Price</td>
                            <td><a type="button" class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();">Delete</a></td>
                            <td><a type="button" class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-Id="@Model[i].Id">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}