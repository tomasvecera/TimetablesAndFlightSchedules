@model Vehicle

@{
    ViewData["Title"] = "Vehicle - Create";
}
    <div class="bg-light rounded p-5">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Vehicle Type</label>
            <input class="form-control" asp-for="VehicleType">
            <span asp-validation-for="VehicleType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Number of Tickets</label>
            <input class="form-control" asp-for="NumberOfTickets">
            <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}