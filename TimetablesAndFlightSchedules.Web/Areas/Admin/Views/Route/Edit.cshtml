@model Route

@{
    ViewData["Title"] = "Route - Edit";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label class="form-label">From</label>
        <input class="form-control" asp-for="From">
    </div>
    <div class="mb-3">
        <label class="form-label">To</label>
        <input class="form-control" asp-for="To">
    </div>
    <div class="mb-3">
        <label class="form-label">Date</label>
        <input class="form-control" asp-for="Date">
    </div>
    <div class="mb-3">
        <label class="form-label">Departure Time</label>
        <input class="form-control" asp-for="DepartureTime">
    </div>
    <div class="mb-3">
        <label class="form-label">Arrival Time</label>
        <input class="form-control" asp-for="ArrivalTime">
    </div>
    <div class="mb-3">
        <label class="form-label">Vehicle</label>
        <input class="form-control" asp-for="Vehicle">
    </div>
    <div class="mb-3">
        <label class="form-label">Ticket</label>
        <input class="form-control" asp-for="Ticket">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>