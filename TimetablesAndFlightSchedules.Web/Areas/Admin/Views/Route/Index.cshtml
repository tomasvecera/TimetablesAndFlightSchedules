@model IList<Route>

@{
    ViewData["Title"] = "Route Administration";
}
<h1>@ViewData["Title"]</h1>

<a type="button" class="btn btn-outline-primary btn-sm" asp-action="Create">Create Route</a>
@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@nameof(Route.Id)</th>
                    <th scope="col">@nameof(Route.CityFromID)</th>
                    <th scope="col">@nameof(Route.CityToID)</th>
                    <th scope="col">@nameof(Route.VehicleID)</th>
                    @*<th scope="col">@nameof(Route.Vehicle.VehicleType)</th>*@
                    <th scope="col">@nameof(Route.TicketID)</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; ++i)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].CityFromID</td>
                        <td>@Model[i].CityToID</td>
                        <td>@Model[i].VehicleID</td>
                        @*<td>@Model[i].Vehicle.Id</td>
                        <td>@Model[i].Vehicle.VehicleType</td>*@ @* TODO !!!!!!!!!!!!!!!!!!!!!!!!!!!!!*@
                        <td>@Model[i].TicketID</td>
                        <td><a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();">Delete</a></td>
                        <td><a asp-action="Edit" asp-route-Id="@Model[i].Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}