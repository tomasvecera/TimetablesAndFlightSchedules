@model IList<Route>

@{
    ViewData["Title"] = "Route Administration";
}
<div class="bg-light rounded p-5">
    <h1>@ViewData["Title"]</h1>

    <a type="button" class="btn btn-outline-primary btn-sm" asp-action="Create">Create Route</a>
    @{
        if (Model != null && Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">@nameof(Route.Id)</th>
                        <th scope="col">@nameof(Route.CityFromID)</th>
                        <th scope="col">@nameof(Route.CityFrom)</th>
                        <th scope="col">@nameof(Route.CityToID)</th>
                        <th scope="col">@nameof(Route.CityTo)</th>
                        <th scope="col">@nameof(Route.RouteName)</th>
                        <th scope="col">@nameof(Route.VehicleID)</th>
                        <th scope="col">@nameof(Route.Vehicle.VehicleType)</th>
                        <th scope="col">@nameof(Route.PriceOfTicket)</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; ++i)
                    {
                        <tr>
                            <th scope="row">@Model[i].Id</th>
                            <td>@Model[i].CityFrom.Id</td>
                            <td>@Model[i].CityFrom.Name</td>
                            <td>@Model[i].CityTo.Id</td>
                            <td>@Model[i].CityTo.Name</td>
                            <td>@Model[i].RouteName</td>
                            <td>@Model[i].Vehicle.Id</td>
                            <td>@Model[i].Vehicle.VehicleType</td>
                            <td>@Model[i].PriceOfTicket</td>
                            <td><a type="button" class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();">Delete</a></td>
                            <td><a type="button" class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-Id="@Model[i].Id">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}