@model RouteVehicleTicketViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mt-5">
    <form>
        <div class="row">
            <div class="form-group col-md-4">
                <select class="form-select" aria-label="Default select example">
                    @{
                        if (Model != null && Model.Vehicles != null && Model.Vehicles.Count != 0)
                        {
                            for (int i = 0; i < Model.Vehicles.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <option selected>@Model.Vehicles[i].VehicleType</option>
                                }
                                else
                                {
                                    <option>@Model.Vehicles[i].VehicleType</option>
                                }
                            }
                        }
                        else
                        {
                            <option disabled>No vehicles available</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group col-md-4">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Datum</div>
                    </div>
                    <input type="text" class="form-control" id="input1" placeholder="dd.mm.yyyy">
                </div>
            </div>
            <div class="form-group col-md-4">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Čas</div>
                    </div>
                    <input type="text" class="form-control" id="input2" placeholder="hh:mm">
                </div>
            </div>
        </div>
    </form>
</div>

