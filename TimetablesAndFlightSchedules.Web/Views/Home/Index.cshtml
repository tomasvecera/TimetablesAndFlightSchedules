@model RouteVehicleCityRouteInstanceViewModel

@{
    ViewData["Title"] = "Home Page";
}

<body class="bg-white"></body> @*bg-secondary*@
<div class="container mt-5 p-5 rounded bg-light border border-primary">
    <h1 class="text-center mb-4">Time Tables & Flight Schedules</h1>
    <form class="mt-5" asp-action="Submit" method="post">
        <div class="form-row align-items-center mx-5 my-3">
            <div class="col-auto">
                <select class="custom-select mr-sm-2" name="vehicle" id="inlineFormCustomSelect">
                    @{
                        if (Model != null && Model.Vehicles != null && Model.Vehicles.Count != 0)
                        {
                            for (int i = 0; i < Model.Vehicles.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <option selected>@Model.Vehicles[i].VehicleType</option>
                                }
                                else
                                {
                                    <option>@Model.Vehicles[i].VehicleType</option>
                                }
                            }
                        }
                        else
                        {
                            <option disabled>No vehicles available</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto">
                <div class="custom-control custom-checkbox mr-sm-2">
                    <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                    <label class="custom-control-label" for="customControlAutosizing">Přestupy</label>
                </div>
            </div>
        </div>
        <div class="form-row align-items-center mx-5 my-auto">
            <div class="form-group col-10">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text px-3">Odkud</div>
                    </div>
                    <input type="text" class="form-control" name="from" list="suggestions">
                    <datalist id="suggestions">
                        @{
                            if (Model != null && Model.Cities != null && Model.Cities.Count != 0)
                            {
                                for (int i = 0; i < Model.Cities.Count; i++)
                                {
                                    <option>@Model.Cities[i].Name</option>
                                }
                            }
                            else
                            {
                                <option disabled>No vehicles available</option>
                            }
                        }
                    </datalist>
                </div>
            </div>
        </div>
        <div class="form-row align-items-center mx-5 my-auto">
            <div class="form-group col-10">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text px-4">Kam</div>
                    </div>
                    <input type="text" class="form-control" name="to" list="suggestions">
                </div>
            </div>
        </div>
        <div class="form-row align-items-centes mx-5 my-auto">
            <div class="form-group col-auto">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Datum</div>
                    </div>
                    <input type="date" class="form-control" name="date" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                </div>
            </div>
            <div class="form-group col-auto">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Čas</div>
                    </div>
                    <input type="time" class="form-control" name="time" value="@DateTime.Now.ToString("HH:mm")">
                </div>
            </div>
            <div class="col-2 mx-5">
                <button type="submit" class="btn btn-primary btn-block">Hledat</button>
            </div>
        </div>
    </form>
</div>


